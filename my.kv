                text: "S"
            Label:
                text: "M"
            Label:
                text: "L"
            Label:
                text: "XL"
            Label:
                text: "XXL"

            CheckBox:
                id: szXXS
                text: "szXXS"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szXS
                text: "szXS"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szS
                text: "szS"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szM
                text: "szM"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szL
                text: "szL"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szXL
                text: "szXL"
                active : False
                on_active:
                    root.gender = self.text
            CheckBox:
                id: szXXL
                active : False
                text: "szXXL"
                on_active:
                    root.gender = self.text

        GridLayout:
            cols: 3
            Button:
                text: "Go Back"
                on_release:
                    root.insert_data()
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text: "Clear"
                on_release:
                    root.clean()
            Button:
                text: "All Sizes"
                on_release:
                    root.selectAll()
