WindowManager:
    id: screen_manager
    MainWindow:
        manager: screen_manager
    ShirtsWindow:
        manager: screen_manager
    PantsWindow:
        manager: screen_manager
    ShoesWindow:
        manager: screen_manager




<MainWindow>:
    id: main
    name: "main"
    item : item
    GridLayout:
        cols:2

        GridLayout:
            cols: 2

            Label:
                text: "Item Name: "

            TextInput:
                id: item
                multiline: False

        GridLayout:
            cols: 3

            Button:
                text: "Shirts"
                on_release:
                    app.root.current = "shirts"
                    root.manager.transition.direction = "left"

            Button:
                text: "Pants"
                on_release:
                    app.root.current = "pants"
                    root.manager.transition.direction = "left"

            Button:
                text: "Shoes"
                on_release:
                    app.root.current = "shoes"
                    root.manager.transition.direction = "left"
        Button:
            text: "Clear"
            on_release:
                root.clean()
        Button:
            text: "Submit"
            on_release:
                root.submit()

<P>:
    Label:
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "You pressed the button"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}


<ShirtsWindow>:
    id: shirts
    name: "shirts"
    szXXS: szXXS
    szXS: szXS
    szS: szS
    szM: szM
    szL: szL
    szXL: szXL
    szXXL: szXXL
    GridLayout:
        cols: 1

        GridLayout:
            cols: 7

            Label:
                text: "XXS"
